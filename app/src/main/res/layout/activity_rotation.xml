<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewStabilization"
        android:layout_width="@dimen/edge_view_initial_device_position"
        android:layout_height="@dimen/edge_view_initial_device_position"
        android:layout_gravity="center"
        android:background="@drawable/ic_rotation_indicator" />

    <View
        android:id="@+id/viewInitialDeviceRotation"
        android:layout_width="@dimen/edge_view_stabilization"
        android:layout_height="@dimen/edge_view_stabilization"
        android:background="@color/colorPrimary"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTrackRotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="40dp"
        android:text="@string/text_track_rotation"
        android:textAllCaps="false" />

</FrameLayout>